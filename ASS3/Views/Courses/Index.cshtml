@model PagedList.IPagedList<ASS3.Models.Course>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script type="text/javascript">

        function regtableclass() {
            // Alterative coloring
            $('.table>tbody>tr:even').addClass('roweven');
            // Highlight rows when mouse hovering
            $('.table>tbody>tr').mouseover(function () {
                $(this).addClass('rowhover');
            });
            $('.table>tbody>tr').mouseout(function () {
                $(this).removeClass('rowhover');
            });
        }

        $(document).ready(function () {
            // Alterative coloring
            regtableclass();

            // AJAX search
            $('#search').click(function () {
                var val = $('#term').val();
                $.ajax({
                    url: '/Courses/Search',
                    contentType: 'application/html; charset=utf-8',
                    data: { term: val, page:1},
                    type: 'GET',
                    dataType: 'html'
                })
                .success(function (result) {
                    $('#result').html(result);
                    regtableclass();
                })
                .error(function (xhr, status) {
                    alert(status);
                })
            });

            // Paging
            $('body').on('click', '.pagination a', function (event) {
                event.preventDefault();
                console.log('page');
                var searchString = $('#term').val();
                if (searchString == undefined || searchString == '') {
                    searchString = '';
                } else {
                    searchString = '&term=' + searchString;
                }
                var url = $(this).attr('href');
                if (url == undefined)
                    return;
                url = url + searchString;
                console.log(url);
                $.ajax({
                    url: url,
                })
                    .success(function (result) {
                        $('#result').html(result);
                        regtableclass();
                    })
                .error(function (xhr, status) {
                    alert(status);
                });
            });

        });
    </script>
}

<h2>Courses List</h2>

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="form-group form-inline col-md-6">
        <label for="term">Name</label>
        <input type="text" id="term" class="form-control" />
        <button type="button" value="Search" id="search" class="btn btn-primary">
            <span class="glyphicon glyphicon-search"></span> Search
        </button>
    </div>
</div>

<div id="result">
    @{Html.RenderPartial("~/Views/Courses/Search.cshtml", Model);}
</div>
